
<h1>Add Restaurant </h1>

<%= form_for [@restaurant] do |f| %>
 <div class = "field"><%= f.label :name %>
 <%= f.text_field :name %>

 <div class = "field">
   <%= f.label  :address %>
 <%= f.text_field  :address %> </div>

 <div class = "field">
   <%= f.label :phone_number %>
 <%= f.text_field :phone_number %></div>

<div class = "field">
   <%= f.label :price %>
 <%= f.text_field :price_range %></div>

 <div class = "field">
   <%= f.label :opening_time %>
 <%= f.number_field :opening_time %></div>

 <div class = "field">
   <%= f.label :closing_time %>
 <%= f.number_field :closing_time %></div>

 <div class = "field">
   <%= f.label :max_capacity %>
 <%= f.text_field :max_capacity %></div>

<div class = "field">
   <%= f.label :menu %>
 <%= f.text_field :menu, placeholder: "Enter URL" %></div>

<%= f.submit %>
<% end %>
